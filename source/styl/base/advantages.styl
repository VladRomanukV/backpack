.advantages
	width: 90%
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content space-between
	margin: 0 auto
	align-items center
	padding 100px 0
	&-left, &-right
		flex-direction column
		&__block
			display flex
			margin-bottom 30px
			display flex
			font-size: 0
			align-items flex-start
			width 100%
		&__textblock
			display flex
			flex-direction column
		&__title
			font-size 24px
			font-weight: bold
			margin-bottom 10px
			width 100%
			color #f75e5e
		&__text
			font-size 20px
			font-weight 400
		&__img
			display flex
			align-self: center
			margin-right 20px
			img
				align-self: center;
	