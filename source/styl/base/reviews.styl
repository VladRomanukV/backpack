.reviews
	width 100%
	padding: 100px 0
	&-headline
		color 404040
		display: block
		margin 0 auto 50px auto
		text-align: center
		font-size 36px
	&-slider
		width 90%
		margin 0 auto
		display flex
		flex-wrap wrap
		justify-content space-between
		&__block
			padding 10px 20px
			box-shadow 0 0 10px rgba(0,0,0,0.5);
			width 30%
			border-radius 10px
		&__title
			color #f75e5e
			font-size 30px
			margin-bottom 20px
		&__text
			color #404040
			line-height 1.2