.aside
	display flex
	width 100%
	position relative
	font-family: 'RobotoBold'
	&-right
		position relative
		background url(../img/aside_img/aside_bg.jpg) no-repeat center
		background-size cover
		width 50%
		min-height 600px
	&-left
		width 50%
		position relative
		padding 30px
		&__block
			width 90%
			position absolute
			background #3b3b3b
			color #fff
			padding 50px 0 150px 0
			z-index 100
			right -50px
			&--dabl
				width 50%
				margin 0 auto
		&__tetle
			font-size 50px
			margin-bottom 50px
			span
				color #f75e5e
		&__text
			line-height 1.5
			font-size 25px